#### ----------------------- Imports ----------------------- ####

import pandas as pd 
from os.path import join
from snakemake.utils import min_version

min_version('6.0')  # require `snakemake` >= 6.0

#### -------------------- Configuration -------------------- ####

configfile: "config/config.yml"

#### ------------------------ Utils ------------------------ ####

# include: "rules/common.smk"

#### ----------------------- Targets ----------------------- ####
samples = list(set(pd.read_csv(config['samples']['file'])['Run']))

rule all:
    input: 
        expand(join(config['align_dir'], "{accession}", "{accession}.sorted.bam"), accession = samples)

      
rule clean:
    shell:
        """
        rm -rf logs/
        rm -rf tmp/
        rm -f slurm*.out
        """

